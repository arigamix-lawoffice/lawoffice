{
	"ConnectionStrings": {
		"default": "__TessaDefaultConnection__",
		"legacy": "__TessaLegacyConnection__"
	},

	"//ConnectionStrings PostgreSQL": {
		"default": [ "Host=localhost; Database=arigamix; User ID=postgres; Password=Master1234; Pooling=true; MaxPoolSize=100; MaxAutoPrepare=50; AutoPrepareMinUsages=20", "Npgsql" ]
	},

	"DataProviders": {
		"Npgsql": "Npgsql.NpgsqlFactory, Npgsql"
	},

	".if": [
		"linux",
		{
			"Settings": {
				"PlatformDependencies": "Tessa.Platform.LinuxTessaPlatformDependencies, Arigamix.Linux"
			}
		},
		"windows",
		{
			"Settings": {
				"Webbi": {
					"MaintenanceConfig": {
						"Mode": "iis",
						"Path": "C:/inetpub/wwwroot/arigamix_law_office/web/web.config",
						"RulePrefix": "Maintenance"
					}
				}
			}
		}
	],

	".include": [
		"app-*.json",
		"localization.json",
		"patch*.json"
	],

	"Settings": {
		// Autogenerated
		"SignatureKey": "",
		"CipherKey": "",

		// Basic options
		"ServerCode": "__TessaServerCode__",
		"LicenseFile": "@*.tlic",
		"Redis": "localhost",
		"EnableInterprocessCache": true,
		"ProbingPath": "extensions",
		"ServerDependencies": "Tessa.Server.TessaServerDependencies, Arigamix.Server",
		"WebControllers": [ "extensions/Arigamix.Extensions.Default.Server.Web.dll", "extensions/Arigamix.Extensions.Server.Web.dll" ],
		"WebRazorReferences": [ "extensions" ],

		// Web client options
		"PathBase": "",
		"GuyFawkesAuth": "__TessaGuyFawkesAuth__",
		"WinAuthIsEnabled": false,
		"WinAuth": "__TessaWinAuth__",
		"WinAutoLogin": false,
		"PreviewPdfEnabled": true,
		"CryptoProPluginEnabled": false,
		"ServiceWorkerEnabled": true,
		"AlwaysOpenLinksInSingleBrowserTab": true,

